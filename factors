#include <stdio.h>

/**
 * factorize_numbers - Factorize numbers in a file
 * @file_path: The path to the file containing the numbers
 */

void factorize_numbers(const char *file_path) {
	FILE *file = fopen(file_path, "r");
	if (!file) {
		perror("File open error");
		return;
	}

	char line[100];
	while (fgets(line, sizeof(line), file)) {
		int n = atoi(line);
		int p = 2;
		while (p * p <= n) {
			if (n % p == 0) {
				int q = n / p;
				printf("%d=%d*%d\n", n, p, q);
				break;
			}
			p++;
		}
	}

	fclose(file);
}

int main(int argc, char *argv[]) {
	if (argc != 2) {
		fprintf(stderr, "Usage: factors <file>\n");
		return 1;
	}

	factorize_numbers(argv[1]);
	return 0;
}
